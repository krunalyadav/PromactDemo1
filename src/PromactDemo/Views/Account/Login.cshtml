@model Login
@{
    ViewBag.Title = "Login";
}
<div class="row">
    <div class="col-md-4">
        <div class="col-md-offset-4">
            <a asp-controller="Account" asp-action="Register" class="btn btn-default">Register</a>
        </div>
    </div>
</div>
<div class="row">
    <form method="post" asp-controller="Account" asp-action="Login" class="form-horizontal col-md-4" autocomplete="off">
        <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
        <div class="form-group">
            <label class="col-md-4 control-label" asp-for="UserName"></label>
            <div class="col-md-8">
                <input asp-for="UserName" class="form-control" placeholder="User Name" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label" asp-for="Password"></label>
            <div class="col-md-8">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-4">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
        </div>
    </form>
</div>